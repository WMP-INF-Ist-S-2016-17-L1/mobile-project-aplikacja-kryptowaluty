<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cryptoapp.chuddyni.cryptoapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cbteal_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cbteal_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cryptoapp.chuddyni.cryptoapp.currencylist.CurrencyListTabsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".news.NewsListActivity"></activity>
        <activity android:name=".AboutTheDevActivity"></activity>
        <activity android:name=".news.WebViewActivity"
            android:parentActivityName=".news.NewsListActivity">
        </activity>

        <activity android:name="com.cryptoapp.chuddyni.cryptoapp.currencydetails.CurrencyDetailsTabsActivity"
            android:parentActivityName="com.cryptoapp.chuddyni.cryptoapp.currencylist.CurrencyListTabsActivity">
        </activity>
    </application>

</manifest>